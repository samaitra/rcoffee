<!DOCTYPE html>
<html>
<head>
  <title>Rcoffee</title>
  <%= stylesheet_link_tag    "bootstrap" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div class="container">
  <div class="masthead">
        <h3 class="muted">Rcoffee</h3>
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <ul class="nav">
                <li class="active"><%= link_to("Home",:controller => 'home', :action => 'index')%></li>
                <li><a href="#">Cart</a></li>
                <li><a href="#">Sign Up</a></li>
               </ul>
            </div>
          </div>
        </div><!-- /.navbar -->
      </div>

      <section class="round">
		<div id="container">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
		</div>
      </section>

<footer></footer>
 </div>
</body>
</html>
